{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2015", "es2017", "es2018", "es2019", "es2020"],
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      },
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
  }